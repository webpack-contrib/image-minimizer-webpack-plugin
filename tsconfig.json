{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "lib": ["es2023"],
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "types": ["node"],
    "resolveJsonModule": true,

    // `skipLibCheck` only for avoid bug of `svgo` v3.0.0
    // see: https://github.com/svg/svgo/issues/1700
    "skipLibCheck": true,

    "outDir": "./types"
  },
  "include": ["./src/**/*"]
}
