    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "types": ["node"],
    "resolveJsonModule": true,
    "newLine": "LF",
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*"]
}
